{
  "name": "sage",
  "version": "1.0.0",
  "description": "evergreen-ai-service",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "NODE_ENV=development yarn dev-run",
    "dev-run": "vite-node --watch src/main.ts",
    "dev:staging": "NODE_ENV=staging yarn dev-run",
    "dev:prod": "NODE_ENV=production yarn dev-run",
    "deploy:staging": "NODE_ENV=staging dotenv-flow -- sh scripts/deploy.sh",
    "clean": "rm -rf dist bin node_modules",
    "codegen": "graphql-codegen-esm --config graphql.config.ts",
    "e2e": "vitest --project e2e",
    "test": "vitest --project unit",
    "test:ui": "yarn test --ui",
    "test:run": "yarn test run",
    "test:coverage": "yarn test --coverage",
    "eslint:fix": "yarn eslint:strict --fix",
    "eslint:staged": "STRICT=1 eslint",
    "eslint:strict": "STRICT=1 eslint .",
    "format": "prettier --write src/**/*.ts \"**/*.md\" \"*.md\"",
    "format:check": "prettier --check src/**/*.ts \"**/*.md\" \"*.md\"",
    "run-analyzer": "vite-node src/mastra/tests/scripts/run-log-analyzer.ts",
    "test-thinking-agent": "vite-node src/mastra/tests/scripts/test-thinking-agent.ts",
    "chat-with-staging": "vite-node src/mastra/tests/scripts/chat-with-staging.ts",
    "mastra:dev": "mastra dev -p 4111",
    "mastra:build": "mastra build",
    "mastra:start": "node --import=./.mastra/output/instrumentation.mjs .mastra/output/index.mjs",
    "mastra:full": "yarn mastra:build && yarn mastra:start",
    "prepare": "husky",
    "eval": "ENABLE_SENTRY_PROFILING=false npx braintrust eval --no-send-logs",
    "eval:send_to_braintrust": "ENABLE_SENTRY_PROFILING=false npx braintrust eval --no-progress-bars",
    "load-dataset-into-braintrust": "vite-node src/evals/scripts/braintrust-dataset-loader.ts"
  },
  "dependencies": {
    "@ai-sdk/azure": "^2.0.32",
    "@ai-sdk/openai": "^2.0.26",
    "@ai-sdk/provider": "^2.0.0",
    "@mastra/core": "^0.18.0",
    "@mastra/libsql": "^0.14.3",
    "@mastra/loggers": "^0.10.13",
    "@mastra/memory": "^0.15.3",
    "@mastra/mongodb": "^0.14.2",
    "@mastra/rag": "^1.2.6",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.64.1",
    "@opentelemetry/core": "^2.1.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.205.0",
    "@opentelemetry/sdk-node": "^0.204.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/winston-transport": "^0.16.0",
    "@sentry/node": "^10.10.0",
    "@sentry/profiling-node": "^10.11.0",
    "ai": "^5.0.48",
    "braintrust": "^0.3.8",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "express-winston": "^4.2.0",
    "gpt-tokenizer": "^3.0.1",
    "gql": "^1.1.2",
    "graphql": "^16.11.0",
    "graphql-tag": "^2.12.6",
    "mongodb": "^6.18.0",
    "query-string": "^9.2.2",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@graphql-codegen/cli": "^5.0.7",
    "@opentelemetry/propagation-utils": "^0.31.3",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/express-winston": "^4.0.2",
    "@types/node": "^20.5.0",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoevals": "^0.0.131",
    "csv-parse": "^6.1.0",
    "dotenv-flow-cli": "^1.1.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^54.3.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "junit-report-builder": "^5.1.1",
    "lint-staged": "^16.1.5",
    "mastra": "^0.13.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.42.0",
    "vite-node": "^3.2.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "express",
    "server",
    "evergreen",
    "ai-service",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
