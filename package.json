{
  "name": "sage",
  "version": "1.0.0",
  "description": "evergreen-ai-service",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && tsc-alias",
    "start": "NODE_ENV=production node dist/main.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/main.ts",
    "clean": "rm -rf dist bin node_modules",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "eslint:fix": "yarn eslint:strict --fix",
    "eslint:staged": "STRICT=1 eslint",
    "eslint:strict": "STRICT=1 eslint .",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "mastra:dev": "mastra dev",
    "mastra:build": "mastra build"
  },
  "dependencies": {
    "@ai-sdk/azure": "^1.3.24",
    "@ai-sdk/openai": "^1.3.23",
    "@mastra/core": "^0.10.15",
    "@mastra/libsql": "^0.11.0",
    "@mastra/loggers": "^0.10.3",
    "@mastra/memory": "^0.11.3",
    "ai": "^4.3.19",
    "dotenv": "^17.1.0",
    "express": "^4.18.2",
    "express-list-endpoints": "^7.1.1",
    "express-winston": "^4.2.0",
    "mastra": "^0.10.13",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.1",
    "@types/express": "^4.17.17",
    "@types/express-winston": "^4.0.2",
    "@types/node": "^20.5.0",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsdoc": "^51.3.4",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-sort-destructure-keys": "^2.0.0",
    "globals": "^16.3.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.36.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "keywords": [
    "express",
    "server",
    "evergreen",
    "ai-service",
    "typescript"
  ],
  "author": "",
  "license": "ISC"
}
