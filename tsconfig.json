{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "types": ["node", "vitest/globals"],
    "paths": {
      "@/*": ["./src/*"],
      "@/api-server/*": ["./src/api-server/*"],
      "@/clients/*": ["./src/clients/*"],
      "@/config/*": ["./src/config/*"],
      "@/constants/*": ["./src/constants/*"],
      "@/db/*": ["./src/db/*"],
      "@/gql/*": ["./src/gql/*"],
      "@/mastra": ["./src/mastra/index.ts"],
      "@/mastra/*": ["./src/mastra/*"],
      "@/test-utils/*": ["./src/test-utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/utils/*": ["./src/utils/*"]
    },

    /* Directory Options */
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    /* Code Quality */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  },
  "include": ["src/**/*"],
  // Exclude mastra directory from build. It should be built by mastra dev command.
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
