{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "types": ["node", "vitest/globals"],
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/api-server/*": ["api-server/*"],
      "@/clients/*": ["clients/*"],
      "@/config": ["config/index.ts"],
      "@/constants/*": ["constants/*"],
      "@/db/*": ["db/*"],
      "@/gql/*": ["gql/*"],
      "@/mastra": ["mastra/index.ts"],
      "@/mastra/*": ["mastra/*"],
      "@/test-utils/*": ["test-utils/*"],
      "@/types": ["types/index.ts"],
      "@/types/*": ["types/*"],
      "@/utils": ["utils/index.ts"],
      "@/utils/*": ["utils/*"]
    },

    /* Directory Options */
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "declaration": true,

    /* Code Quality */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true
  },
  "include": ["src/**/*"],
  // Exclude mastra directory from build. It should be built by mastra dev command.
  "exclude": ["node_modules", "dist"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
